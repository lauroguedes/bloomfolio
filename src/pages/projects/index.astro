---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import ProjectCard from "../../components/ProjectCard.astro";

const projects = await getCollection("projects");

// Sort by start date, most recent first
const sortedProjects = projects.sort(
  (a, b) => b.data.startDate.getTime() - a.data.startDate.getTime()
);
---

<Layout
  title="Projects - Luis Miguel Rodríguez"
  description="Explore my latest projects and work"
>
  <main class="max-w-6xl mx-auto px-4 py-20">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4">Proyectos</h1>
      <p class="text-xl text-base-content/70">
        Una pequeña colección de proyectos en los que he trabajado, que muestran mis habilidades y experiencia.
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-3 mb-10">
      <button
        type="button"
        class="btn btn-sm btn-outline btn-primary"
        data-project-filter="all"
      >
        Todos
      </button>
      <button
        type="button"
        class="btn btn-sm btn-outline"
        data-project-filter="bi"
      >
        BI
      </button>
      <button
        type="button"
        class="btn btn-sm btn-outline"
        data-project-filter="analisis de datos"
      >
        Análisis de Datos
      </button>
      <button
        type="button"
        class="btn btn-sm btn-outline"
        data-project-filter="desarrollo"
      >
        Desarrollo
      </button>
    </div>

    <!-- Back to Home -->
    <div class="mb-8">
      <a href="/" class="btn btn-ghost btn-sm">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        Volver al Inicio
      </a>
    </div>

    <!-- Projects Grid -->
    {
      sortedProjects.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-2xl text-base-content/60">
            Aún no hay proyectos. ¡Vuelve pronto!
          </p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedProjects.map((project) => (
            <div
              data-project-category={project.data.category}
            >
              <ProjectCard project={project} />
            </div>
          ))}
        </div>
      )
    }

    <script>
      if (typeof window !== "undefined") {
        const buttons = document.querySelectorAll('[data-project-filter]');
        const cards = document.querySelectorAll('[data-project-category]');

        buttons.forEach((button) => {
          button.addEventListener('click', () => {
            const filter = button.getAttribute('data-project-filter');

            buttons.forEach((btn) => {
              btn.classList.remove('btn-primary');
            });
            button.classList.add('btn-primary');

            cards.forEach((card) => {
              const category = card.getAttribute('data-project-category');
              if (filter === 'all' || category === filter) {
                card.classList.remove('hidden');
              } else {
                card.classList.add('hidden');
              }
            });
          });
        });
      }
    </script>
  </main>
</Layout>
