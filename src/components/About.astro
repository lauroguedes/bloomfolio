---
import { Linkedin, Mail } from "@lucide/astro";

interface Props {
  title: string;
  photo?: string;
  Content: any;
}

const { title, photo, Content } = Astro.props;
---

<section id="about" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="card card-side bg-base-200 shadow-sm">
      {
        photo && (
          <figure class="shrink-0 w-48">
            <img src={photo} alt={title} />
          </figure>
        )
      }
      <div class="card-body">
        <h2 class="card-title text-2xl">{title}</h2>
        <div class="text-lg">
          <Content />
        </div>
        <div class="card-actions justify-end gap-2 mt-4">
          <div class="tooltip" data-tip="Ver perfil en LinkedIn">
            <a
              href="https://linkedin.com/in/luismiguelro"
              target="_blank"
              class="btn btn-primary btn-sm gap-2"
            >
              <Linkedin class="size-4" />
              <span>LinkedIn</span>
            </a>
          </div>
          <div class="tooltip" data-tip="Enviarme un correo">
            <a
              href="mailto:luismiguelro.dev@gmail.com"
              class="btn btn-outline btn-sm gap-2"
            >
              <Mail class="size-4" />
              <span>Email</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
